{minimum_otp_vsn, "21.3"}.

{erl_opts, [debug_info]}.

{deps, [
        {cowboy, "~> 2.5.0"},
        base64url,
        {jsone, "~> 1.4.7"},
        oidcc
       ]
}.

{plugins, [
           rebar3_proper,
           rebar3_auto,
           rebar3_run
          ]}.

{profiles, [
            {test, [
                    {deps, [meck]},
                    {cover_enabled, true}
                   ]}
           ]}.

{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files,
           rules => [{elvis_style, invalid_dynamic_call, #{ignore => [oidcc_client]}}]},
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config }
        ] }.
